{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "importsNotUsedAsValues": "error",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "references": [
        {
            "path": "./src"
        }
    ]
}
